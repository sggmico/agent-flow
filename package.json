{
  "name": "agent-flow",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm -F @agent-flow/web dev",
    "build": "pnpm -r build",
    "start": "pnpm -F @agent-flow/web start",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "type-check": "pnpm -r type-check",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "db:generate": "pnpm -F @agent-flow/database db:generate",
    "db:migrate": "pnpm -F @agent-flow/database db:migrate",
    "db:push": "pnpm -F @agent-flow/database db:push",
    "db:studio": "pnpm -F @agent-flow/database db:studio",
    "db:test": "tsx --env-file=.env scripts/test-db.ts",
    "wt": "./scripts/worktree.sh",
    "wt:add": "./scripts/worktree.sh add",
    "wt:rm": "./scripts/worktree.sh remove",
    "wt:ls": "./scripts/worktree.sh list",
    "wt:st": "./scripts/worktree.sh status",
    "wt:clean": "./scripts/worktree.sh clean"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^25.0.3",
    "dotenv": "^17.2.3",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1"
}
